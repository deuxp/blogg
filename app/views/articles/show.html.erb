<div style='border:solid black;padding: 1rem;border-radius:9px;'>
  <p>
    <strong>
      Title:
    </strong> <%= @article.title %>
  </p>

  <p>
    <strong>
      Text:
    </strong>
    <%= @article.text %>
  </p>
</div>

<h2>Comments</h2>
<div style='border:dotted blue;border-radius:10px;padding: 1rem;'>
  <% @article.comments.each do |comment| %>
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
  <% end %>
</div>

<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

